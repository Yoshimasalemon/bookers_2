<% if @user.errors.any? %>
    <div class = "alert alert-warning">
         <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="inputIntroduction">introduction</label>
  <%= f.text_field :introduction, autofocus: true %>
  <%= f.submit " Update User" %>
<% end %>