<% if @user.errors.any? %>
    <div class = "alert alert-warning">
         <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
<div class="form-group">
  <p>Name</p>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control"%>
  </div>
 <p>Image</p>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <div class="form-group">
 <p>introduction</p>
  <%= f.text_field :introduction,  autofocus: true , class:"form-control"%>
  </div>
  <div>
  <%= f.submit " Update User", class:"btn btn-secondary"%>
  </div>
<% end %>
</div>
</div>
</div>