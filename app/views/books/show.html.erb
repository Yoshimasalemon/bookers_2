<h1>User info</h1>
<div class="profile-container">

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
  <h3 class="profile-name">
      <span>name</span><%= @user.name %>
  </h3>
  <h3><span>introduction</span><%= @user.introduction %></h3>
</div>


<%= link_to edit_user_path(@user), method: :get do %>
<i class="fas fa-cog"></i>
<% end %>


<h1>New Books</h1>
<%= form_with model: @booknew do |f|  %>

  <%= f.label :Title %>
  <%= f.text_field :title %>

  <%= f.label :Opinion %>
  <%= f.text_field :body %>

  <%= f.submit %>
<% end %>



     <h1>Book detail</h1>
