<% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>




    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h1>User info</h1>
<div class="profile-container">
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
  <h3 class="profile-name"><span>name</span> <%= @user.name %></h3>
  <h3><span>introduction</span><%= @user.introduction %></h3>
</div>
<%= link_to "プロフィール編集", edit_user_path(@user) %>

<h1>New Book</h1>
<%= form_with model: @book do |f|  %>

  <%= f.label :Title %>
  <%= f.text_field :title %>

  <%= f.label :Opinion %>
  <%= f.text_field :body %>

  <%= f.submit %>
<% end %>


       <table>
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>